<%= render 'users/show', user: @user, book: @book %>

<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>Image</th><th>Name</th><th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @users.each do |user| %>
      <tr>
      <td><%= attachment_image_tag user, :profile_image, size:"100x100" %></td>
      <td><%= user.name %></td>
      <td><%= link_to 'Show', book_path(user) %></td>
      </tr>
      <% end %>
  </tbody>
</table>