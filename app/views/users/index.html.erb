<div class="container">
  <div class="row">
    <%= render 'users/show', user: @user, book: @book %>
    <div class="col-xs-9 mt-40">
      <h2>Users</h2>
      <table class="table table-hover table-invers">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody class="h-50">
          <% @users.each do |user| %>
            <tr>
             <td><%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "noimage.png" %></td>
             <td><%= user.name %></td>
             <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
