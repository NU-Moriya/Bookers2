 <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
  <% end %>
<!-- 部分テンプレートの読み込み→プロフィール画像の表示、editへのリンク、Newbook機能　-->
<div class="container">
  <div class="row">
    <%= render 'users/show', user: @users, book: @book %>
    <div class="col-xs-9">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th>Title</th><th>Opinion</th><th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @usersbooks.each do |book| %>
            <tr>
              <td><%= link_to book.title,book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
  </div>
</div>