<!-- each メソッドで以下をローカル変数で作る-->
<div class="col-xs-3 mt-40">
  <% if book.errors.any? %>
    <ul>
      <% book.errors.full_messages.each do |error| %>
        <li><%= error %></li>
        <%= alert %>
      <% end %>
    </ul>
  <% end %>
  
  <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "noimage.png" %>
    <table class="table">
      <tbody>
      <tr>
    	  <th>name</th><th><%= user.name %></th>
    	</tr>
      <tr>
    	  <th>introduction</th><th><%= user.introduction %></th>
      </tr>
      </tbody>
    </table>
  
    <%= link_to edit_user_path(user.id) do %>
      <button class="col-xs-12 mt-3 mb-2 btn btn-outline-secondary btn-block">
      <i class="fas fa-wrench"></i>
      </button>
    <% end %>
    <br>
  <!--ここからform_withでnew_bookのcreate bookを作る-->
  <h2>New book</h2>
  <%= form_with model:@books, local:true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "col-xs-12 form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "col-xs-12 form-control" %>
    </div>
    <%= f.submit "Create Book", class:"col-xs-12 btn btn-primary btn-lg btn-block" %>
  <% end %>
</div>