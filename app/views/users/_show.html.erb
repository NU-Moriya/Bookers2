<% if book.errors.any? %>
    <ul>
      <% book.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <%= alert %>
      <% end %>
    </ul>
  </div>
<% end %>

<!-- each メソッドで以下をローカル変数で作る-->
    <div class="col-md-3 mt-40">
      <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "noimage.png" %>
        <table class="table">
          <tbody>
          <tr>
        	  <th>name</th><th><%= user.name %></th>
        	</tr>
          <tr>
        	  <th>introduction</th><th><%= user.introduction %></th>
          </tr>
         </tbody>
        </table>
        <div class="row">
          <button class="col-md-12 btn btn-outline-secondary mt-3 mb-2">
        <%= link_to edit_user_path(user.id) do %>
          <i class="fas fa-wrench"></i>
        <% end %>
          </button>
        </div>
    


<!--ここからform_withでnew_bookのcreate bookを作る-->
    <h2>New book</h2>
    <%= form_with model:@books, local:true do |f| %>
      <h3>Title</h3>
       <%= f.text_field :title %>
      <h3>Opinion</h3>
       <%= f.text_area :body %>
       <%= f.submit "Create Book", class:"btn btn-primary btn-lg btn-block" %>
    <% end %>
  </div>