<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/4254070997.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-dark bg-dark">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span class="header-main-title">Bookers</span>
        </nav>
        <nav class="nav navbar-nav navbar-right">
            <ul class="nav">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to 'Home', user_path(current_user.id), class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Users', users_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Books', books_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "logout", destroy_user_session_path, class: "nav-link", method: :delete %>
                </li>
               <% else %>
                <li class="nav-item">
                  <%= link_to "Home", root_path, class: "fas fa-home nav-link mr-3" %>
                </li>
                <li class="nav-item">
                  <%= link_to "About", home_about_path, class: "fas fa-link nav-link mr-3" %>
                </li>
                <li class="nav-item">
                  <%= link_to "sign up", new_user_registration_path, class: "fas fa-edit nav-link mr-3" %>
                </li>
                <li class="nav-item">
                  <%= link_to "login", new_user_session_path, class: "fas fa-sign-in-alt nav-link mr-3" %>
                </li>
              <% end %>
            </ul>
        </nav>
      </div> <!--containerのとじタグ-->
    </header>
    <%= yield %>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col--3 offset-md-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
