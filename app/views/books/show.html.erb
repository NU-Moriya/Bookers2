<div class="container">
  <% if flash[:notice] %>
  <div class="flash">
  <p><%= flash[:notice] %></p>
  </div>
  <% end %>
  <div class="row">
    <%= render 'users/show', user: @users, book: @book %>
    <div class="col-xs-9 mt-40">
    <h2>Book detail</h2>
    <table class="table table-hover table-invers">
      <tbody>
          <tr>
            <td><%= link_to attachment_image_tag @users, :profile_image, size:"50x50", fallback: "noimage.png" %><br>
              <%= link_to @users.name, user_path(@users.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
          <% if @users.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: "Are you sureï¼Ÿ"}, class:"btn btn-danger" %></td>
          <% end %>
          </tr>
        
      </tbody>
</table>
