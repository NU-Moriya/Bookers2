<%= render 'users/show', user: @users, book: @book %>
<h2>Book detail</h2>

<table>
  <thead>
    <tr>
      <th colspan="1"></th><th colspan="1"></th><th colspan="1"></th><th colspan="1"></th><th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @usersbooks.each do |book| %>
      <tr>
      <td><%= link_to attachment_image_tag(book.user, :profile_image, size:"100x100") %></td>
      <td><%= link_to @users.name, user_path(@users.id) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      </tr>
      <% if user_signed_in? %>
      <td><%= link_to 'Edit', edit_book_path(current_user.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      <% end %>
    <% end %>
  </tbody>
</table>
