<%= render 'users/show', user: @user, book: @book %>

<h2 class="books-index-title">Books</h2>
<table>
  <thead>
    <tr>
      <th colspan="3"></th><th>Title</th><th>Opinion</th>
    </tr>
  </thead>
  <tbody>
      <% @allbooks.each do |book| %>
      <tr>
      <td><%= link_to attachment_image_tag(book.user, :profile_image, size:"100x100") %></td>
      <td><%= link_to book.title, book_path(book.user) %></td>
      <td><%= book.body %></td>
      </tr>
      <% end %>
  </tbody>
</table>
