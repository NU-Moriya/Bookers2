<% if flash[:alert] %>
  <div class="flash">
    <%= flash[:alert] %>
  </div>
<% end %>
<h1>Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
    <h3>Title</h3>
     <%= f.text_field :title %>
    <h3>Opinion</h3>
     <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
  <% end %>
<%= link_to 'Show', book_path(@book) %>
<%= link_to 'Back', books_path %>
  
